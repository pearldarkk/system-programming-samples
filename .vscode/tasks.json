{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "buildC",
            "command": "gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${relativeFileDirname}/${fileBasenameNoExtension}",
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "buildCpp",
            "command": "g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${relativeFileDirname}/${fileBasenameNoExtension}"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "type": "shell",
            "label": "runCCpp",
            "windows": {
                "command": "${relativeFileDirname}/${fileBasenameNoExtension}"
            },
            "linux": {
                "command": "./${relativeFileDirname}/${fileBasenameNoExtension}"
            },
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
    ]
}